<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 启动页样式 -->
    <!-- 需要自己添加一个启动图片 -->
    <!--         <item name="android:windowBackground">@mipmap/act_splash_def</item> -->
    <style name="BaseStyleAppWelcome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- RadioButton -->
    <style name="BaseStyleRadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- 水波纹 -->
    <style name="BaseStyleWater">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>